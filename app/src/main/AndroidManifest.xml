<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vesit.cakeshopandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CakeShopAndroid"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.user.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activity.user.YourOrderActivity"
            android:exported="false" />
        <activity
            android:name=".activity.user.OrderSummaryActivity"
            android:exported="false" />
        <activity
            android:name=".activity.user.AddressActivity"
            android:exported="false" />
        <activity
            android:name=".activity.user.CartActivity"
            android:exported="false" />
        <activity
            android:name=".activity.user.ProductDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activity.user.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.user.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".activity.user.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".activity.user.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CakeShopAndroid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>