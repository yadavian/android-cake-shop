<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.CartActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart_list"
        android:layout_width="420dp"
        android:layout_height="600dp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rv_cart_list"
        android:textAlignment="center"
        android:textColor="@color/theme_dark_blue"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_total_prize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_address"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="center"
        android:textColor="@color/theme_light_orange"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_final_order"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_total_prize"
        android:layout_centerHorizontal="true"
        android:text="Place your Order" />


</RelativeLayout>